{
    "version": "0.2.0",
    "configurations": [
      {
        // MacOS c++
        "name": "Launch c++ Program(lldb)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/debug.out",
        "args": [
          "4",
          "3",
          "2",
          "1"
        ],
        "stopAtEntry": false,
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "lldb",
        "preLaunchTask": "buildCurrent_cpp_File",
        "internalConsoleOptions": "openOnSessionStart" // this may need to be copied in user settings as well
      },
      {
        // MacOS c
        "name": "Launch c Program(lldb)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/debug.out",
        "args": [
          "4",
          "3",
          "2",
          "1"
        ],
        "stopAtEntry": false,
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "lldb",
        "preLaunchTask": "buildCurrent_c_File",
        "internalConsoleOptions": "openOnSessionStart" // this may need to be copied in user settings as well
      },
      {
        // Linux
        "name": "(gdb) Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceRoot}/debug.out",
        "args": [
          "4",
          "3",
          "2",
          "1"
        ],
        "stopAtEntry": false,
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "internalConsoleOptions": "openOnSessionStart"
      },
    ]
  }